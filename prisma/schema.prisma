generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model people {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  name          String
  nameCode      String      @unique
  lifeTime      String
  title         Translation
  field         Field
  thumbnailUrl  String
  introduction  Translation[] 
  mainStory     Translation[] 
  // earlyLife     Translation[] 
  // careerPath    Translation[] 
  // challenges    Translation[] 
  // legacies      Translation[] 
  facts         Translation[]
  quotes        Translation[]
  // personalLife  Translation[]
  conclusion    Translation[]
  isActive      Boolean
}

type Translation {
  en String
  vi String
}

enum Field {
  Sport
  Literature
  Science
  Politic
  Military
}
